Config { 

   -- appearance
     font =         "xft:Bitstream Vera Sans Mono:size=9:bold:antialias=true"
     -- font = "xft:Ubuntu Mono:size=10:Bold:antialias=true"
   , bgColor =      "black"
   , fgColor =      "#646464"
   , position =     Top
   , border =       BottomB
   , borderColor =  "#646464"

   -- layout
   , sepChar =  "%"   -- delineator between plugin names and straight text
   , alignSep = "}{"  -- separator between left-right alignment
   -- , template = " %StdinReader% }{ %coretemp% | %gputemp% | %memory% | %disku% | %dynnetwork% | %date% " -- | %multicpu% | %KBFI% | %coretemp% || %kbd% "
   , template = " %StdinReader% }{ %memory% | %disku% | <action=`python -m xnm`>%dynnetwork%</action> | %vol% | %battery% | %date% "

   -- general behavior
   , lowerOnStart =     True    -- send to bottom of window stack on start
   , hideOnStart =      False   -- start with window unmapped (hidden)
   , allDesktops =      True    -- show on all desktops
   , overrideRedirect = True    -- set the Override Redirect flag (Xlib)
   , pickBroadest =     True    -- choose widest display (multi-monitor)
   , persistent =       True    -- enable/disable hiding (True = disabled)

   -- plugins
   --   Numbers can be automatically colored according to their value. xmobar
   --   decides color based on a three-tier/two-cutoff system, controlled by
   --   command options:
   --     --Low sets the low cutoff
   --     --High sets the high cutoff
   --
   --     --low sets the color below --Low cutoff
   --     --normal sets the color between --Low and --High cutoffs
   --     --High sets the color above --High cutoff
   --
   --   The --template option controls how the plugin is displayed. Text
   --   color can be set by enclosing in <fc></fc> tags. For more details
   --   see http://projects.haskell.org/xmobar/#system-monitor-plugins.
   , commands = 

        -- weather monitor
        -- [ Run Weather "KBFI" [ "--template", "<fc=#4682B4><tempC></fc>°C | <fc=#4682B4><rh></fc>% | <fc=#4682B4><pressure></fc>hPa"
        -- [ Run Weather "KBFI" [ "--template", "<fc=#4682B4><tempC></fc>°C | <fc=#4682B4><pressure></fc>hPa"
        --                      ] 36000

        -- network activity monitor (dynamic interface resolution)
        [ Run DynNetwork     [ "--template" , "<dev>: <tx>kB/s|<rx>kB/s"
                             , "--Low"      , "1000"       -- units: kB/s
                             , "--High"     , "5000"       -- units: kB/s
                             , "--low"      , "darkgreen"
                             , "--normal"   , "darkorange"
                             , "--high"     , "darkred"
                             ] 10

        -- cpu activity monitor
        , Run MultiCpu       [ "--template" , "Cpu: <autototal> %"
                             , "--Low"      , "50"         -- units: %
                             , "--High"     , "85"         -- units: %
                             , "--low"      , "darkgreen"
                             , "--normal"   , "darkorange"
                             , "--high"     , "darkred"
                             ] 10

        -- disk space monitor
		, Run DiskU          [("/", "<used>/<size>"), ("sdc1", "<used>/<size>")]
				             [ "--Low"      , "50"
                             , "--High"     , "90"
                             , "--low"      , "darkgreen"
                             , "--normal"   , "darkorange"
                             , "--high"     , "darkred"
                             , "-m", "1", "-p", "3"
                             ] 10

        -- cpu core temperature monitor
        -- , Run CoreTemp       [ "--template" , "Cpu Temp: <core0> <core1> <core2> <core3> °C"
        --                      , "--Low"      , "70"        -- units: °C
        --                      , "--High"     , "80"        -- units: °C
        --                      , "--low"      , "darkgreen"
        --                      , "--normal"   , "darkorange"
        --                      , "--high"     , "darkred"
        --                      ] 50
        --                   
        -- memory usage monitor
        , Run Memory         [ "--template" ,"Mem: <usedratio>%"
                             , "--Low"      , "20"        -- units: %
                             , "--High"     , "90"        -- units: %
                             , "--low"      , "darkgreen"
                             , "--normal"   , "darkorange"
                             , "--high"     , "darkred"
                             ] 10
        , Run Com "/bin/bash" ["-c", "~/.xmonad/get-volume.sh"]  "vol" 1

        -- battery monitor
        , Run Battery        [ "--template" , "<left>% <watts>W"
                             , "--Low"      , "10"        -- units: %
                             , "--High"     , "80"        -- units: %
                             , "--low"      , "darkred"
                             , "--normal"   , "darkorange"
                             , "--high"     , "darkgreen"

                             , "--" -- battery specific options
                             , "-p"         , "darkgreen"
							 -- -- discharging status
							 -- , "-o"	, "<left>%"
							 -- -- AC "on" status
							 -- , "-O"	, "<fc=#006000><left>%</fc>"
							 -- -- charged status
							 -- , "-i"	, "<fc=#006000><left>%</fc>"
                             ] 50

        -- , Run Com "getgputemp" [] "gputemp" 10

        -- time and date indicator
		-- see strftime formatting for more options
        --   (%F = y-m-d date, %a = day of week, %T = h:m:s time)
        , Run Date           "<fc=#ABABAB>%F (%a) %l:%M:%S %p</fc>" "date" 10

        , Run StdinReader

        -- -- keyboard layout indicator
        -- , Run Kbd            [ ("us(dvorak)" , "<fc=#00008B>DV</fc>")
        --                      , ("us"         , "<fc=#8B0000>US</fc>")
        --                      ]
        ]
}
